<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingBottom="@dimen/card_vertical_padding"
    app:contentPaddingTop="@dimen/card_vertical_padding"
    app:cardCornerRadius="@dimen/card_corner_radius">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/dialog_shopping_list_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dialog_horizontal_margin"
                android:layout_marginStart="@dimen/dialog_horizontal_margin"
                android:checked="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add to Shopping List"
                style="@style/titleTextCompact"
                />

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_shopping_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_recyclerview_height"/>

    </LinearLayout>

</android.support.v7.widget.CardView>