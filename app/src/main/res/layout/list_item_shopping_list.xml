<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dialog_horizontal_margin"
    android:paddingEnd="@dimen/dialog_horizontal_margin"
    android:paddingLeft="@dimen/dialog_horizontal_margin"
    android:paddingStart="@dimen/dialog_horizontal_margin"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_ingredient_min_height">
    
    <CheckBox
        android:id="@+id/list_shopping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/list_ingredient_quantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        tools:text="1 (14.5 oz) cans"/>
    
    <TextView
        android:id="@+id/list_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="tomato"/>

</LinearLayout>