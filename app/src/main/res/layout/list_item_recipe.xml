<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/list_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_thumbnail_height_single"
        tools:src="@android:drawable/star_on"
        />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_thumbnail_height_single"
        app:columnCount="3">

        <TextView
            android:id="@+id/list_title"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            tools:text="Fried Chicken"/>

        <TextView
            android:id="@+id/list_description"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            tools:text="Simple fried chicken from Kentucky"
            />

        <TextView
            android:id="@+id/list_reviews_count"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            tools:text="25 reviews"
            />

        <ImageView
            android:src="@drawable/simple_star"
            app:layout_gravity="fill_vertical"
            app:layout_rowSpan="2"/>

        <ImageView
            android:src="@drawable/simple_star"
            android:tint="@android:color/primary_text_light"
            app:paddingEnd="0dp"
            app:paddingStart="0dp"
            android:layout_height="18dp"
            />
        <TextView
            android:id="@+id/list_avg_rating"
            tools:text="4.99"
            />

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>
