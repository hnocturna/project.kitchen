<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="@integer/detail_transition_duration">
    <slide android:slideEdge="top">
        <targets>
            <target android:targetId="@id/toolbar"/>
        </targets>
    </slide>
    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/details_recipe_content1" />
            <!--<target android:targetId="@id/details_recipe_content2" />-->
        </targets>
    </slide>
    <fade>
        <targets>
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@id/details_recipe_image" />
        </targets>
    </fade>
</transitionSet>